import java.util.*;
public class Hello{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=a;
        int count=1;
        while(count<=b){
            c=c*2;
            count++;
        }
        System.out.print(c);
    }
}
