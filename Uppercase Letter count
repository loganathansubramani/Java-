import java.util.*;
public class Hello{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        String a=sc.nextLine();
        int count=0;
        for(int i=0;i<a.length();i++){
            char ch=a.charAt(i);
            if(Character.isUpperCase(ch)){
                count++;
            }
        }
        System.out.print(count);
    }
}
